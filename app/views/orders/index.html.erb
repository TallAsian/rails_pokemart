<h1>Your Orders</h1>

<div class="pokemon-container">
    <div>
    </div>
    <% if @orders.present? %>
    <% @orders.each do |order| %>
        <div class="order-details">
        <h2>Order ##{order.id}</h2>
        <p>Quantity: <%= order.quantity %></p>
        
        <!-- You can fetch additional information from associated models -->
        <p>Product: <%= order.product.prod_name %></p>
        
        <!-- Display customer information if needed -->
        <p>Customer: <%= order.customer.cust_name %></p>
        
        <!-- Add other order attributes as needed -->
        </div>
    <% end %>
    <% else %>
    <p>You have no orders yet.</p>
    <% end %>
</div>
