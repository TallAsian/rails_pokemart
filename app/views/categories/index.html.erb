<h1>Pokemart Categories</h1>

<div>
    <ol class="pokemon-container">
        <% @pokemon_categories.each do |cat| %>
            <li class="pokemon-name">
                <%= link_to (cat) do %>
                    <%= cat.cat_name.gsub('-', ' ') %>
                <% end %>
            </li>
        <% end %>
    </ol>
    <div class="pagination">
        <%= paginate @pokemon_categories %>
    </div>
</div>
